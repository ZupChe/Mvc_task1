@using Microsoft.AspNetCore.Identity
@using Microsoft.Extensions.Localization
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject IStringLocalizer<Resource> localizer

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right col-lg-2">
        <ul class="nav navbar-nav navbar-right col-lg-2">
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@localizer["HelloLabel"] @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">@localizer["LogOutLabel"]</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right col-lg-2">
        <li><a asp-area="Identity" asp-page="/Account/Register">@localizer["RegisterLabel"]</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login">@localizer["LogInLabel"]</a></li>
    </ul>
}
